<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.example"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>ER Simulation Tool</name>

    <description>
        An application for elearning
    </description>

    <author href="https://build.phonegap.com" email="support@phonegap.com">
        Chameleon Communications International
    </author>

    <icon src="icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="icon-76@2x.png" gap:platform="ios" width="152" height="152" />

    <preference name="DisallowOverscroll" value="true" />
    <preference name="orientation" value="landscape" />
    <preference name="webviewbounce" value="false" />

    <gap:plugin name="de.appplant.cordova.plugin.hidden-statusbar-overlay" />

    <gap:plugin name="com.telerik.plugins.wkwebview" version="0.2.5" />

</widget>